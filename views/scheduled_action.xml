<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <record id="ir_cron_update_usd_rate" model="ir.cron">
            <field name="name">Update USD Rate</field>
            <field name="model_id" ref="base.model_res_currency"/>
            <field name="state">code</field>
            <field name="code">model.update_usd_rate()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
            <field name="nextcall" eval="(DateTime.now()).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="numbercall" eval="-1"/>  <!-- -1 means it runs indefinitely -->
            <field name="user_id" ref="base.user_root"/>
        </record>
    </data>
</odoo>
